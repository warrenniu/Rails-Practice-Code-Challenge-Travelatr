<% if flash[:errors] %>
<ul>
<% flash[:errors].each do |error| %>
    <li><%= error %></li>
<% end %>
</ul>
<% end %>

<%= form_for @blogger do |f| %>
    <%= f.label "Name" %>
    <%= f.text_field :name %><br>
    <%= f.label "Bio" %>
    <%= f.text_area :bio %><br>
    <%= f.label "Age" %>
    <%= f.number_field :age %><br>
    <%= f.submit %>
<% end %>